inline nrRay::nrRay( void )
{
}

////////////////////////////////////////////////////////////////////////////

inline nrRay::nrRay( const nrVector3& origin, const nrVector3& direction )
{
    o = origin;
    d = direction;
}

////////////////////////////////////////////////////////////////////////////

inline nrVector3 nrRay::Point( float t ) const
{
    return o + d * t;
}

